generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model users {
  id String @id @unique @default(uuid())
  name String @db.VarChar(255)
  email String @db.VarChar(255)
  mobile String @db.VarChar(255)
  organization String @db.VarChar(255)
  country String @db.VarChar(255)
  project_requirement String
  bookings bookings[]
}

model bookings {
  id String @id @unique @default(uuid())
  user_id String 
  user users @relation(fields: [user_id] , references: [id])
  completed Boolean @default(false)
  meeting_link String @default("")
  meeting_password String @default("")
  meeting_id String @default("")
  meeting_start_url String @default("")
  slot_id String @unique
  slot slots @relation(fields: [slot_id] , references: [id])
}

model slots {
  id String @id @unique @default(uuid())
  date String @db.VarChar(255)
  booked Boolean @default(false)
  slot String
  booking bookings?
}

